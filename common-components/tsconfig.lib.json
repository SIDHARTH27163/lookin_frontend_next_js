{
 "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "types": ["node", "vite/client"],
    "jsx": "react-jsx" // Add this line to support JSX/TSX files
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include .tsx files
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
